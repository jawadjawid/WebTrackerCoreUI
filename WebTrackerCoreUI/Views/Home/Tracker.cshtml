@model WebTrackerUI.Models.TrackerModel

@{
    ViewData["Title"] = "Tracker";
}

@if (TempData["Message"] != null)
{
    if (TempData["message"].ToString()[0] == 'S')
    {
        <div class="alert alert-success" role="alert" alert-dismissable>
            <button type="button" class="close" data-dismiss="alert">×</button>
            @TempData["Message"]
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert" alert-dismissable>
            <button type="button" class="close" data-dismiss="alert">×</button>
            @TempData["Message"]
        </div>
    }
}

<div class="main">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div style="margin-top: .9rem;">
                <h2 class="display-4 text-white">Monitor website changes</h2>
                <p class="text-white">We'll send you an email notification whenever there's any change to the website.</p>
            </div>
          
            <form asp-action="Tracker">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EmailAddress" class="control-label"></label>
                    <input asp-for="EmailAddress" class="form-control border border-primary rounded" placeholder="jawadadham98@gmail.com" />
                    <span asp-validation-for="EmailAddress" class="text-white"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WebsiteURL" class="control-label"></label>
                    <input asp-for="WebsiteURL" class="form-control" placeholder="https://www.google.com" />
                    <span asp-validation-for="WebsiteURL" class="text-white"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Track" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container">
    <div class="row text-center info-row">
        <div class="col-md-4">
            <img class="icon" src="~/css/icons/cart.svg" alt="Shopping" width="60" height="60">
            <p>
                You can use this website to monitor price changes, and know when the item you orderd is delivered.
            </p>
        </div>
        <div class="col-md-4">
            <img class="icon" src="~/css/icons/job.svg" alt="Jobs" width="60" height="60">
            <p>Monitor your favourite work place careers page to get notifed when there are any oppenings.</p>
        </div>
        <div class="col-md-4">
            <img class="icon" src="~/css/icons/somedia.svg" alt="Social" width="60" height="60">
            <p>Stalk your lowkey crush's instagram to get a notification when they post anything hot.</p>
        </div>
    </div>

    <div class="row text-center info-row">
        <div class="col-md-4">
            <img class="icon" src="~/css/icons/school.svg" alt="School" width="60" height="60">
            <p>
                Receive a notification when you proffesor releases the assginment so you can get an edge by starting as early as possible.
            </p>
        </div>
        <div class="col-md-4">
            <img class="icon" src="~/css/icons/privecy.svg" alt="Privacy" width="60" height="60">
            <p>Get notifed when your favourite website releases an article without subscribing to their mailing list. Unlike them, we dont spam.</p>
        </div>
        <div class="col-md-4">
            <img class="icon" src="~/css/icons/magic.svg" alt="Personal" width="80" height="80">
            <p>The possibilities are endless. You can do anything with this tool really, why dont you try it out?</p>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
