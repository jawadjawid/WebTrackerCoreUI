@model WebTrackerUI.Models.TrackerModel

@{
    ViewData["Title"] = "Tracker";
}

@if (TempData["Message"] != null)
{
    if (TempData["message"].ToString()[0] == 'S')
    {
        <div class="alert alert-success" role="alert" alert-dismissable>
            <button type="button" class="close" data-dismiss="alert">×</button>
            @TempData["Message"]
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert" alert-dismissable>
            <button type="button" class="close" data-dismiss="alert">×</button>
            @TempData["Message"]
        </div>
    }
}

<div class="main">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div style="margin-top: .9rem;">
                <h2 class="display-4 text-white">Monitor website changes</h2>
                <p class="text-white">We'll send you an email notification whenever there's any change to the website.</p>
            </div>
          
            <form asp-action="Tracker">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EmailAddress" class="control-label"></label>
                    <input asp-for="EmailAddress" class="form-control border border-primary rounded" placeholder="jawadadham98@gmail.com" />
                    <span asp-validation-for="EmailAddress" class="text-white"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WebsiteURL" class="control-label"></label>
                    <input asp-for="WebsiteURL" class="form-control" placeholder="https://www.google.com" />
                    <span asp-validation-for="WebsiteURL" class="text-white"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Track" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container">
    <div class="row text-center">
        <div class="col-md-4">
            <h2 class="display-4">Getting started</h2>
            <p>
                ASP.NET MVC gives you a powerful, patterns-based way to build dynamic websites that
                enables a clean separation of concerns and gives you full control over markup
                for enjoyable, agile development.
            </p>
            <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2 class="display-4">Get more libraries</h2>
            <p>NuGet is a free Visual Studio extension that makes it easy to add, remove, and update libraries and tools in Visual Studio projects.</p>
            <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2 class="display-4">Web Hosting</h2>
            <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
            <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
